<com.lawyee.apppublic.widget.ScrollViewWithEditText xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/law_detail_bg"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbarThumbVertical="@android:color/transparent"
    android:scrollbars="vertical"
    tools:context="com.lawyee.apppublic.ui.frag.fragService.jamed.JamedTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            style="@style/TextTitle"
            android:text="@string/jamed_AuditingInfom" />

        <LinearLayout
            android:id="@+id/linear_jamedtwo_apply"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/boundary_16dp"
            android:paddingRight="@dimen/boundary_16dp"
            android:paddingTop="@dimen/boundary_16dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/boundary_16dp"
                    android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/rdb_jamedTwo_accept"
                            style="@style/RadioBtn"
                            android:text="@string/accept"

                            />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/boundary_16dp" />

                        <RadioButton
                            android:id="@+id/rdb_jemedTwo_Noaccept"
                            style="@style/RadioBtn"
                            android:text="@string/no_accept"
                             />
                </RadioGroup>

                <Space style="@style/Space16" />

                <TextView
                    android:id="@+id/tv_jamedTwo_reason"
                    style="@style/Tv_InputBox"
                    android:hint="@string/jamed_nohandleseason" />

                <Space style="@style/Space16" />
                <Space style="@style/Space16" />
                <com.lawyee.apppublic.widget.ContentEditText
                    android:id="@+id/et_jamedTwo_otherexplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/boundary_16dp"
                    android:background="@drawable/bg_input_box"
                    android:gravity="top"
                    android:hint="@string/jamed_otherexplain"
                    android:lines="6"
                    android:imeOptions="actionDone"
                    android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
                    android:padding="5dp"
                    android:textSize="@dimen/text_size_mediummin" />

                <Space style="@style/Space16" />

                <LinearLayout
                    android:id="@+id/linearMediaTwo"
                    style="@style/Linearlayout"
                    android:layout_marginLeft="@dimen/boundary_16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否建议媒体参与调解"
                        android:textColor="@color/lawyer_list_text_tip2"
                        android:textSize="@dimen/text_size_mediummin" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/boundary_16dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdb_jamedTwo_Yes"
                            style="@style/RadioBtn"
                            android:text="@string/yes" />

                        <Space
                            android:layout_width="@dimen/boundary_16dp"
                            android:layout_height="match_parent" />

                        <RadioButton
                            android:id="@+id/rdb_jamedTwo_No"
                            style="@style/RadioBtn"
                            android:text="@string/no" />
                    </RadioGroup>
                </LinearLayout>

                <Space style="@style/Space16" />

                <Button
                    android:id="@+id/btn_jamedTwo_sumbit"
                    style="@style/BtnSumbit"
                    android:layout_gravity="center"
                    android:text="@string/dl_btn_submit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/linear_JamedTwo_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingTop="@dimen/boundary_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aid_audit_result"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />

                <TextView
                    android:id="@+id/tv_jamedTwo_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingTop="@dimen/boundary_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reason"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />

                <TextView
                    android:id="@+id/tv_jamedtwo_resultreason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingTop="@dimen/boundary_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explain"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />

                <TextView
                    android:id="@+id/tv_jamedtwo_resultexplain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_jamedtwo_result_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingTop="@dimen/boundary_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否建议媒体参与调解："
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />

                <TextView
                    android:id="@+id/tv_jamedtwo_resultjion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin" />
            </LinearLayout>
            <Space
                style="@style/Space8" />
            <View
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:background="#f1dddd" />
        </LinearLayout>
    </LinearLayout>
</com.lawyee.apppublic.widget.ScrollViewWithEditText>
