<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.lawyee.apppublic.ui.frag.JaaidApplyNoticeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Jamed_pre_notice"
                android:textColor="#343434"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boundary_16dp"
                android:layout_marginRight="@dimen/boundary_16dp"
                android:orientation="vertical">



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />


                <TextView
                    style="@style/ApplyText"
                    android:text="@string/Jamed_noticeceont_one"
                    />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

            <TextView
                style="@style/ApplyText"
                android:text="@string/Jamed_noticeceont_two"
                />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/boundary_16dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chb_apply_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/boundary_16dp"
                        android:button="@drawable/selector_btn_apply_check" />

                    <TextView
                        style="@style/ApplyText"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:text="@string/Jamed_information" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
