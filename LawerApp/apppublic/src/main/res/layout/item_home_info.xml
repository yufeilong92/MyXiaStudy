<?xml version="1.0" encoding="utf-8"?>
<!-- 热点排行、新闻纵横 列表项布局  -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listitem_base1"
    >
    <!-- 图片  -->
    <ImageView
        android:id="@+id/listitem_base_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_jaaid"
        />

    <!-- 图片与内容简介  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- 列表项 标题  -->
        <TextView
            android:id="@+id/listitem_base_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:textStyle="bold"
            android:maxLines="2"
            android:minLines="2"
            android:text="新闻标题新闻标题新闻标题新闻标题新闻标题"
            android:textColor="@color/lawyer_list_text_tip1"
            android:textSize="16sp"
            />

        <!-- 内容简介-->
        <TextView
            android:id="@+id/listitem_base_summary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text="2017-05-02 | 法律援助"
            android:textColor="@color/home_list_text_tip"
            android:textSize="@dimen/text_size_small"
            />
    </LinearLayout>
</LinearLayout>
