<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:background="@color/white"
              tools:context=".ui.HomeActivity">

    <LinearLayout
        android:id="@id/activity_title_container"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        android:gravity="bottom"
        >

        <ImageView
            android:padding="12dp"
            android:layout_width="@dimen/title_action_height"
            android:layout_height="@dimen/title_action_height"
            android:background="@drawable/title_button_2"
            android:onClick="onHomeClick"
            android:src="@drawable/btn_return_pressed"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="@string/screen"
            android:textColor="@color/lawyer_list_text_tip2"
            android:textSize="@dimen/text_size_mediumex"/>

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_law_screen_text"
            android:clickable="true"
            android:ellipsize="end"
            android:onClick="onToolbarClick"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_mediummin"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_screen"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus />

        <EditText
            android:id="@+id/et_screen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="12"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="@string/please_input_worker"
            android:textSize="@dimen/text_size_medium"
            />
        <ImageView
            android:id="@+id/iv_clear_screen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_screen_delete"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/law_screen_divider"
        />
    <RelativeLayout
        android:id="@+id/rl_area"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/lawyer_list_text_tip2"
            android:text="@string/area"
            />

        <ImageView
            android:id="@+id/iv_right1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_back"
            />
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right1"
            android:textSize="@dimen/text_size_mediummin"
            android:maxLength="16"
            android:text="@string/all"
            android:textColor="@color/pack_up_text"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/law_screen_divider"
        />

    <RelativeLayout
        android:id="@+id/rl_professional_field"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/lawyer_list_text_tip2"
            android:text="@string/professional_field"
            />

        <ImageView
            android:id="@+id/iv_right3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_back"
            />
        <TextView
            android:id="@+id/tv_professional_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right3"
            android:textSize="@dimen/text_size_mediummin"
            android:textColor="@color/pack_up_text"
            android:text="@string/all"
            />
    </RelativeLayout>

    <View
        android:id="@+id/view_epoa_operatione"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/law_screen_divider"
        />
    <RelativeLayout
        android:id="@+id/rl_isOnline"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/lawyer_list_text_tip2"
            android:text="@string/isOnline"
            />

        <ImageView
            android:id="@+id/iv_right5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_right_back"
            />
        <TextView
            android:id="@+id/tv_isOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_right5"
            android:textSize="@dimen/text_size_mediummin"
            android:textColor="@color/pack_up_text"
            android:text="@string/all"
            />

    </RelativeLayout>
    <View
        android:id="@+id/view_isOnline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/law_screen_divider"
        />
    <TextView
        android:id="@+id/tv_clear_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_btn_clear_choose"
        android:text="@string/clear_choose"
        />
</LinearLayout>