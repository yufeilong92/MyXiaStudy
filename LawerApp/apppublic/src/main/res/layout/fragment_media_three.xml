<com.lawyee.apppublic.widget.ScrollViewWithEditText xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="vertical"
    android:scrollbarThumbVertical="@android:color/transparent"
    tools:context="com.lawyee.apppublic.ui.frag.fragService.media.MediaThreeFragment">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/law_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/TextTitle"
            android:text="@string/recordplan" />

        <LinearLayout
            android:id="@+id/linear_mediathree_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/boundary_16dp"
            android:paddingRight="@dimen/boundary_16dp">

            <Space style="@style/Space16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/boundary_8dp"
                android:drawableRight="@mipmap/icon_tv_stars"
                android:text="@string/recordTime"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space style="@style/Space16" />

            <TextView
                android:id="@+id/tv_MediaThree_BeginDate"
                style="@style/Tv_InputBox"
                android:layout_marginLeft="0dp"
                android:hint="@string/pleaserecordTime" />

            <Space style="@style/Space16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/boundary_8dp"
                android:drawableRight="@mipmap/icon_tv_stars"
                android:text="@string/recordAddress"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space style="@style/Space16" />

            <EditText
                android:id="@+id/et_MediaThree_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_box"
                android:padding="@dimen/boundary_8dp"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_mediummin" />

            <Space style="@style/Space16" />

            <Button
                android:id="@+id/btn_MediaThree_Submit"
                style="@style/BtnSumbit"
                android:layout_gravity="center"
                android:text="@string/dl_btn_submit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liear_mediathree_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingRight="@dimen/boundary_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/boundary_8dp"

                    android:paddingTop="@dimen/boundary_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recordTimeR"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_mediummin" />

                    <TextView
                        android:id="@+id/tv_mediathree_resulttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/boundary_8dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_mediummin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/boundary_8dp"

                    android:paddingTop="@dimen/boundary_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recordAddressR"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_mediummin" />

                    <TextView
                        android:id="@+id/tv_mediathree_resultaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/boundary_8dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text_size_mediummin" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:background="#f1dddd" />
        </LinearLayout>

    </LinearLayout>
</com.lawyee.apppublic.widget.ScrollViewWithEditText>
