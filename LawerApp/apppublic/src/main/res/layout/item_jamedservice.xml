<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="@dimen/boundary_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jamedApply_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="高小琴人民调解申请"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_mediummin" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_jamdeservice_go" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/boundary_8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:paddingLeft="5dp"
                        android:id="@+id/tv_jamedApply_Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_mediummin" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jamedApply_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未审核"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/boundary_8dp"
                android:textSize="@dimen/text_size_mediummin" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_8dp" />
            <TextView
                android:id="@+id/tv_jamedApply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-04-28"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_mediummin" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>