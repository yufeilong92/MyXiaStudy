<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/law_detail_bg"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.lawyee.apppublic.ui.frag.fragService.jamed.JamedFourFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextTitle"
            android:text="@string/jamed_feekbackinfom" />

        <LinearLayout
            android:background="@color/white"
            android:id="@+id/linear_jamedFour_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/boundary_16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/boundary_8dp"
                android:drawableRight="@mipmap/icon_tv_stars"
                android:text="@string/jamed_isSuccess"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boundary_16dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdb_jamedFour_success"
                    style="@style/RadioBtn"
                    android:layout_weight="1"
                    android:text="@string/success"
                    />
                    <RadioButton
                        android:id="@+id/rdb_jamedFour_fail"
                        style="@style/RadioBtn"
                        android:text="@string/fail"
                        android:layout_weight="1"
                      />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/boundary_8dp"
                android:drawableRight="@mipmap/icon_tv_stars"
                android:text="@string/jamed_finishDate"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <TextView
                android:id="@+id/tv_jaemdFour_finishData"
                style="@style/Tv_InputBox"
                android:hint="@string/selectfinishDate" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/boundary_8dp"
                android:drawableRight="@mipmap/icon_tv_stars"
                android:text="@string/SiFaSure"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boundary_16dp"
                android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdb_jamedfour_yes"
                        style="@style/RadioBtn"
                        android:text="@string/yes"
                        android:layout_weight="1"
                        />

                    <RadioButton
                        android:id="@+id/rdb_jamedfour_no"
                        style="@style/RadioBtn"
                        android:text="@string/no"
                        android:layout_weight="1"
                        />

            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_agreement"
                android:textColor="@color/color_hei"
                android:textSize="@dimen/text_size_medium" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/boundary_16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jamedfour_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/boundary_16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_box"
                    android:hint="@string/please_up_agreement"
                    android:padding="@dimen/boundary_8dp"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/text_size_mediummin" />

                <ImageView
                    android:id="@+id/iv_JamedFour_upload_delete"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:padding="12dp"
                    android:src="@mipmap/icon_iv_select_delete"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_jamedfour_Sumbit"
                style="@style/BtnSumbit"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/boundary_16dp"
                android:text="提交" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:visibility="gone"
            android:id="@+id/linear_jamedFour_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingTop="@dimen/boundary_8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="调解是否成功:"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:id="@+id/tv_jamdefour_resultIsSuccess"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingTop="@dimen/boundary_8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="调解结束时间:"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:id="@+id/tv_jamdefour_resultFinsihTime"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingTop="@dimen/boundary_8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="是否经行司法确认:"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:id="@+id/tv_jamdefour_resultIsSure"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/boundary_16dp"
                android:paddingBottom="@dimen/boundary_8dp"
                android:paddingTop="@dimen/boundary_8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="调解协议:"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="@dimen/boundary_8dp"
                    android:id="@+id/tv_jamdefour_resultXieYi"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_mediummin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Space
                style="@style/Space8" />
            <View
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:background="#f1dddd" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
