<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boundary_16dp"
            android:layout_marginRight="@dimen/boundary_16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="当事人仅就相关问题进行法律咨询，可以通过拨打12348法律服务咨询热线、写信、网络咨询或上门咨询等方式向法律援助机构提出"
                    android:textColor="@color/home_list_text_title"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:text="2017-06-01"
                    android:textColor="@color/text_hint_color"
                    android:textSize="@dimen/text_size_mediummin" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_infom_url"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical|right"
                android:foregroundGravity="right"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_image_sq_def_min" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
