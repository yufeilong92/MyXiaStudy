<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_linear_law_vote"
        android:orientation="horizontal"
        android:padding="@dimen/boundary_16dp"
      >

        <TextView
            android:id="@+id/tv_item_peopleorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="2"
            android:textColor="@color/apply_text_color_title"
            android:textSize="@dimen/text_size_medium" />

        <Space
            android:layout_width="@dimen/boundary_16dp"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_avatar" />

        <Space
            android:layout_width="@dimen/boundary_16dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_people_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法治宣传员"
                android:textSize="@dimen/text_size_mediummin" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/boundary_8dp" />

            <TextView
                android:id="@+id/tv_item_people_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贵州司法厅"
                android:textSize="@dimen/text_size_mediummin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_item_Vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_people_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:text="张红艳"
                android:textColor="@color/apply_text_color_title"
                android:textSize="@dimen/text_size_medium" />

            <Space
                android:layout_width="@dimen/boundary_16dp"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/Chb_item_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/selector_law_vote_chb" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_item_showVoteNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_item_voteNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="102票"
                android:textColor="@color/red_law" />

            <TextView
                android:id="@+id/tv_item_VoteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张红艳" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>