<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:background="@color/activity_content_bg"
              >

    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@drawable/btn_return_normal"/>

        <TextView
            android:id="@+id/textView6"
            style="@style/TitleBarText"
            android:text="@string/lawyer_service"/>

        <TextView
            android:id="@+id/tv_select"
            style="@style/TitleBarTextAction"
            android:clickable="true"
            android:onClick="onToolbarClick"
            android:text="@string/screen"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_list_head"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_lawyer"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_lawyer_tab_left"
                android:gravity="center"
                android:text="@string/lawyer"
                android:textColor="@drawable/selector_lawyer_tab_text"
                />

            <TextView
                android:id="@+id/tv_lawyer_office"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_lawyer_tab_right"
                android:gravity="center"
                android:text="@string/law_office"
                android:textColor="@drawable/selector_lawyer_tab_text"
                />
        </LinearLayout>

    </RelativeLayout>

   <FrameLayout
       android:id="@+id/fl_content"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </FrameLayout>


</LinearLayout>

