<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear_item_Case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_linear_law_vote"
        android:orientation="vertical"
        android:paddingTop="@dimen/boundary_16dp"
        android:paddingBottom="@dimen/boundary_16dp"
        android:layout_alignParentTop="true"
     >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_item_CasePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_image_sq_def_min" />

        <Space style="@style/Space16" />
        <TextView
            android:paddingLeft="@dimen/boundary_8dp"
            android:paddingRight="@dimen/boundary_8dp"
            android:id="@+id/tv_item_CaseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/apply_text_color_title"
            android:text="全省政法机关勇于亮剑政法工作有力" />

        <Space style="@style/Space16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/red_law" />

        <Space style="@style/Space16" />

        <RelativeLayout
            android:paddingLeft="@dimen/boundary_8dp"
            android:paddingRight="@dimen/boundary_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_CaseOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_centerVertical="true"
                android:textColor="@color/apply_text_color_title"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_CaseVoteNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="102票"
                android:textColor="@color/red_law"
                android:textSize="@dimen/text_size_medium" />
            <CheckBox
                android:id="@+id/chb_item_CaseVote"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:button="@drawable/selector_law_vote_chb"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>