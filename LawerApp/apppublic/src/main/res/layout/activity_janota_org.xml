<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lawyee.apppublic.ui.org.JanotaOrgActivity">
    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleBarAction"
            android:onClick="onHomeClick"
            android:src="@mipmap/icon_back" />

        <TextView
            style="@style/TitleBarText"
            android:text="@string/janotaorgservice" />

        <ImageView
            style="@style/TitleBarAction"
            android:clickable="false"/>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_janotaorg"
        style="@style/Base.Widget.Design.TabLayout"
        app:tabSelectedTextColor="@color/text_warning_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <com.lawyee.apppublic.widget.NoScrollViewPager
        android:id="@+id/viewpage_org"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />
</LinearLayout>
