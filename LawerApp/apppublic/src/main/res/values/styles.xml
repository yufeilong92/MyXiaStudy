<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- activity 顶部背景 -->
        <item name="activity_title_bg">@color/main_title_bg</item>
        <!-- activity 顶部字体颜色 -->
        <item name="activity_title_text_color">@color/activity_title_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogText"> 
          <item name="android:textColor">#FF000000</item>  
          
        <item name="android:textSize">12sp</item>
    </style>
       

    <style name="DialogText.Title"> 
          <item name="android:textSize">16sp</item>  
    </style>


    <style name="TitleBar">
        <item name="android:id">@id/activity_title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/bg_color</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="TitleBarAction">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">@dimen/title_action_height</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
        <item name="android:background">@drawable/title_button</item>
    </style>

    <style name="TitleBarText">
        <item name="android:id">@id/activity_title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_mediumex</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@color/activity_topbar_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleBarTextAction">
        <item name="android:id">@id/activity_title_text</item>
        <item name="android:layout_width">@dimen/title_action_height</item>
        <item name="android:layout_height">@dimen/title_action_height</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@drawable/selector_title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">@color/tab_selline</item>
